<Window x:Class="V8Reader.Utils.UpdatesWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доступные обновления" Height="456.579" Width="552.632" ShowInTaskbar="False" TextOptions.TextFormattingMode="Display">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="True" x:Name="txtData" Grid.Row="0" Padding="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            
        </TextBox>
        
        <StackPanel Margin="5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnLoad" IsEnabled="False" Padding="5,3" Click="btnLoad_Click">Загрузить обновление</Button>
        </StackPanel>
    </Grid>
</Window>
