<Window x:Name="CompareTree" x:Class="V8Reader.Comparison.CompareTreeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v8r="clr-namespace:V8Reader.Core"
        xmlns:cmp="clr-namespace:V8Reader.Comparison"
        Title="Сравнение файлов" Height="358" Width="564" TextOptions.TextFormattingMode="Display" Icon="/v8viewer;component/Resources/Diff.png">
    <Window.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DiffTreeStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ContextMenu x:Key="treePopup" x:Name="ItemPopup" TextOptions.TextFormattingMode="Display" x:Shared="false">
                <MenuItem x:Name="mnuOpen" Header="Открыть" MenuItem.Click="mnuOpen_Click"></MenuItem>
                <MenuItem x:Name="mnuHelp" Header="Справочная информация" MenuItem.Click="mnuHelp_Click"></MenuItem>
            </ContextMenu>

        </ResourceDictionary>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.IsSharedSizeScope="True">

            <Grid.Resources>
                <cmp:TreeIndentConverter x:Key="IndentConverter"/>
                <v8r:IconTypeConverter x:Key="IconConverter"/>
            </Grid.Resources>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="{StaticResource btnFaceBrush}" BorderBrush="{StaticResource btnBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="10" SharedSizeGroup="LeftColumn"/>
                        <ColumnDefinition Width="Auto" MinWidth="10" SharedSizeGroup="RightColumn"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Первый файл" Margin="4,2,6,2" Grid.Column="0"/>
                    <GridSplitter Style="{StaticResource colSplitterStyle}" Grid.Column="0"/>

                    <TextBlock Text="Второй файл" Margin="4,2,6,2" Grid.Column="1"/>
                    <GridSplitter Style="{StaticResource colSplitterStyle}" Grid.Column="1"/>

                </Grid>
            </Border>
            <TreeView Grid.Row="1" x:Name="twTree" Style="{StaticResource DiffTreeStyle}">

                <TreeView.Resources>
                    <StackPanel x:Key="CellTemplate" Orientation="Horizontal" x:Shared="False">
                        <FrameworkElement Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeViewItem}, Converter={StaticResource IndentConverter}}"/>
                        <ToggleButton Style="{StaticResource TreeToggleButton}"/>
                        <Image Source="{Binding Object.Icon, Converter={StaticResource IconConverter}}" 
                               Stretch="None" UseLayoutRounding="True"/>
                        <Label Padding="2" Content="{Binding Presentation}"></Label>
                    </StackPanel>
                    
                    <cmp:ComparisonStatusConverter x:Key="StatusConverter"/>
                    
                </TreeView.Resources>
                
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="LeftColumn"/>
                                <ColumnDefinition SharedSizeGroup="RightColumn"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Name="LeftSide" DataContext="{Binding Left}" Grid.Column="0" Child="{StaticResource CellTemplate}"
                                    BorderBrush="{StaticResource btnBorderBrush}" BorderThickness="0,0,1,0">
                                
                            </Border>

                            <Border Name="RightSide" DataContext="{Binding Right}" Grid.Column="1" Child="{StaticResource CellTemplate}">
                                
                            </Border>

                        </Grid>

                        <HierarchicalDataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Status, Converter={StaticResource StatusConverter}}" Value="Added">
                                <Setter TargetName="LeftSide" Property="Background" Value="#FFFDE7E7"></Setter>
                                <Setter TargetName="RightSide" Property="Background" Value="#FF6ECBA9"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status, Converter={StaticResource StatusConverter}}" Value="Deleted">
                                <Setter TargetName="RightSide" Property="Background" Value="#FF6ECBA9"></Setter>
                                <Setter TargetName="LeftSide" Property="Background" Value="#FFFDE7E7"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status, Converter={StaticResource StatusConverter}}" Value="Modified">
                                <Setter TargetName="RightSide" Property="Background" Value="#FFCEFBFF"></Setter>
                                <Setter TargetName="LeftSide" Property="Background" Value="#FFCEFBFF"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeViewItem}}" Value="true">
                                <Setter TargetName="RightSide" Property="Background" Value="{x:Null}"></Setter>
                                <Setter TargetName="LeftSide" Property="Background" Value="{x:Null}"></Setter>
                            </DataTrigger>
                        </HierarchicalDataTemplate.Triggers>

                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>

        </Grid>
        
        <!-- нижняя панель -->
        <Border Grid.Row="1" BorderBrush="#FF9E9E9E" BorderThickness="0,1,0,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <StackPanel HorizontalAlignment="Right">
                    <CheckBox x:Name="chkMatchNames" Content="Сопоставлять объекты по именам" IsChecked="True"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button x:Name="btnRefresh" Padding="5,2" Click="btnRefresh_Click">Обновить</Button>
                    </StackPanel>
                </StackPanel>
            
            </Grid>
        </Border>
    </Grid>
</Window>
