<Window x:Name="CompareTree" x:Class="V8Reader.Comparison.CompareTreeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v8r="clr-namespace:V8Reader.Core"
        xmlns:v8rc="clr-namespace:V8Reader.Controls"
        xmlns:cmp="clr-namespace:V8Reader.Comparison"
        Title="Сравнение файлов" Height="358" Width="564" TextOptions.TextFormattingMode="Display" Icon="/v8viewer;component/Resources/Diff.png">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <ContextMenu x:Key="treePopup" x:Name="ItemPopup" TextOptions.TextFormattingMode="Display" x:Shared="false">
            <MenuItem x:Name="mnuOpen" Header="Открыть" MenuItem.Click="mnuOpen_Click"></MenuItem>
            <MenuItem x:Name="mnuHelp" Header="Справочная информация" MenuItem.Click="mnuHelp_Click"></MenuItem>
        </ContextMenu>


    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <v8rc:TreeListView x:Name="twTree" MouseDoubleClick="twTree_MouseDoubleClick" HorizontalContentAlignment="Stretch">
            <v8rc:TreeListView.Resources>
                <v8r:IconTypeConverter x:Key="IconConverter"/>

                <Style TargetType="Border" x:Key="Red">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Object}" Value="{x:Null}">
                            <Setter Property="Background" Value="#70FFD2D2">
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>

                    <!--Setter Property="Background" Value="#02FFFFFF"/-->
                    
                </Style>

                <!-- Единичная ячейка дерева -->
                <Grid x:Key="GridCell" x:Shared="false">
                    <Border Style="{StaticResource Red}"/>
                    <Label HorizontalAlignment="Stretch" Padding="0.5" Tag="{Binding Object}" MouseRightButtonUp="twElements_RightMouseUp" MouseDoubleClick="Label_MouseDoubleClick_1">
                        <StackPanel Orientation="Horizontal">
                            <v8rc:TreeListViewExpander/>
                            <Image Source="{Binding Object.Icon, Converter={StaticResource IconConverter}}" RenderOptions.BitmapScalingMode="NearestNeighbor" Height="16" Width="16" Margin="3,0,1,0"/>
                            <TextBlock Text="{Binding Presentation}"></TextBlock>
                        </StackPanel>
                        
                        <Label.ContextMenu>
                            <StaticResource ResourceKey="treePopup"/>
                        </Label.ContextMenu>
                    </Label>
                </Grid>
                
                <DataTemplate x:Key="header">
                    <TextBlock Margin="0,4" Text="{Binding}" Width="{Binding Column.ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type GridViewColumnHeader}}}" />
                </DataTemplate>

                <!-- Обычная ячейка -->
                <DataTemplate x:Key="LeftCell">
                    <Border DataContext="{Binding Left}" Margin="-6,0" Child="{StaticResource GridCell}"/>
                </DataTemplate>

                <DataTemplate x:Key="RightCell">
                    <Border DataContext="{Binding Right}" Margin="-6,0" Child="{StaticResource GridCell}" BorderBrush="#FFBBBBBB" BorderThickness="1,0,0,0"></Border>
                </DataTemplate>

            </v8rc:TreeListView.Resources>

            <v8rc:TreeListView.ItemTemplate>
                <HierarchicalDataTemplate DataType="cmp:ComparisonItem" ItemsSource="{Binding Items}">
                </HierarchicalDataTemplate>
            </v8rc:TreeListView.ItemTemplate>
            
            <v8rc:TreeListView.Columns>
                <GridViewColumn Header="Первый файл" Width="240" HeaderTemplate="{StaticResource header}" CellTemplate="{StaticResource LeftCell}"/>
                <GridViewColumn Header="Второй файл" Width="240" HeaderTemplate="{StaticResource header}" CellTemplate="{StaticResource RightCell}"/>
            </v8rc:TreeListView.Columns>
            
        </v8rc:TreeListView>
        
        <!-- нижняя панель -->
        <Border Grid.Row="1" BorderBrush="#FF9E9E9E" BorderThickness="0,1,0,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <StackPanel HorizontalAlignment="Right">
                    <CheckBox x:Name="chkMatchNames" Content="Сопоставлять объекты по именам" IsChecked="True"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button x:Name="btnRefresh" Padding="5,2" Click="btnRefresh_Click">Обновить</Button>
                    </StackPanel>
                </StackPanel>
            
            </Grid>
        </Border>
    </Grid>
</Window>
