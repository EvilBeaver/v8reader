<Window x:Class="V8Reader.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="V8 Reader: Ошибка" Height="365" Width="420" ShowInTaskbar="False" Topmost="True" TextOptions.TextFormattingMode="Display">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42"/>
            <ColumnDefinition Width="237*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Source="Resources/cancel.gif" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Margin="5,0,0,0">
            При выполнении операции произошла непредвиденная ошибка. Описание ошибки приведено ниже.
        </TextBlock>
        
        <TextBox IsReadOnly="True" Grid.Row="1" Grid.ColumnSpan="2" x:Name="excText" TextWrapping="Wrap" Margin="0,5,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"></TextBox>
        
        <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,5,0,0" MinWidth="90" MinHeight="22" Click="Button_Click_1">ОК</Button>
        
    </Grid>
</Window>
